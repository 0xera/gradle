<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" uuid="6b4a6e81-324a-4673-a812-1f4db738e562" xsi:noNamespaceSchemaLocation="http://www.jetbrains.com/teamcity/schemas/10.0/project-config.xsd">
  <name>Gradleception - Java8 Linux</name>
  <description>Builds Gradle with the version of Gradle which is currently under development (twice)</description>
  <settings>
    <options>
      <option name="artifactRules" value="**/build/reports/** =&gt; reports&#xA;subprojects/*/build/tmp/test files/** =&gt; test-files&#xA;subprojects/*/build/tmp/test distros/**/user-home-dir/daemon/*.log =&gt; isolated-daemon&#xA;build/daemon/** =&gt; daemon&#xA;intTestHomeDir/worker-1/daemon/**/*.log =&gt; intTestHome-daemon&#xA;build/errorLogs/** =&gt; errorLogs" />
      <option name="checkoutMode" value="ON_AGENT" />
      <option name="executionTimeoutMin" value="240" />
      <option name="maximumNumberOfBuilds" value="3" />
    </options>
    <parameters>
      <param name="env.GRADLE_OPTS" value="-Xmx1G -Dfile.encoding=utf-8" />
      <param name="env.JAVA_HOME" value="%linux.java8.oracle.64bit%" />
    </parameters>
    <build-runners>
      <runner id="RUNNER_1" name="BUILD_WITH_WRAPPER" type="gradle-runner">
        <parameters>
          <param name="teamcity.coverage.emma.include.source" value="true" />
          <param name="teamcity.coverage.emma.instr.parameters" value="-ix -*Test*" />
          <param name="teamcity.coverage.idea.includePatterns" value="*" />
          <param name="teamcity.coverage.jacoco.patterns" value="+:*" />
          <param name="teamcity.step.mode" value="default" />
          <param name="ui.gradleRUnner.gradle.build.file" value="build.gradle" />
          <param name="ui.gradleRunner.additional.gradle.cmd.params" value="-PmaxParallelForks=%maxParallelForks% -s --no-daemon --continue -I ./gradle/buildScanInit.gradle -Djava7.home=%linux.jdk.for.gradle.compile%" />
          <param name="ui.gradleRunner.gradle.tasks.names" value="clean :install -Pgradle_installPath=dogfood-first" />
          <param name="ui.gradleRunner.gradle.wrapper.useWrapper" value="true" />
        </parameters>
      </runner>
      <runner id="RUNNER_2" name="BUILD_WITH_BUILT_GRADLE" type="gradle-runner">
        <parameters>
          <param name="teamcity.coverage.emma.include.source" value="true" />
          <param name="teamcity.coverage.emma.instr.parameters" value="-ix -*Test*" />
          <param name="teamcity.coverage.idea.includePatterns" value="*" />
          <param name="teamcity.coverage.jacoco.patterns" value="+:*" />
          <param name="teamcity.step.mode" value="default" />
          <param name="ui.gradleRUnner.gradle.build.file" value="build.gradle" />
          <param name="ui.gradleRunner.additional.gradle.cmd.params" value="-PmaxParallelForks=%maxParallelForks% -s --no-daemon --continue -I ./gradle/buildScanInit.gradle -Djava7.home=%linux.jdk.for.gradle.compile%" />
          <param name="ui.gradleRunner.gradle.home" value="%teamcity.build.checkoutDir%/dogfood-first" />
          <param name="ui.gradleRunner.gradle.tasks.names" value="clean :install -Pgradle_installPath=dogfood-second" />
          <param name="ui.gradleRunner.gradle.wrapper.useWrapper" value="false" />
        </parameters>
      </runner>
      <runner id="RUNNER_3" name="QUICKCHECK_WITH_GRADLE_BUILT_BY_GRADLE" type="gradle-runner">
        <parameters>
          <param name="teamcity.coverage.emma.include.source" value="true" />
          <param name="teamcity.coverage.emma.instr.parameters" value="-ix -*Test*" />
          <param name="teamcity.coverage.idea.includePatterns" value="*" />
          <param name="teamcity.coverage.jacoco.patterns" value="+:*" />
          <param name="teamcity.step.mode" value="default" />
          <param name="ui.gradleRUnner.gradle.build.file" value="build.gradle" />
          <param name="ui.gradleRunner.additional.gradle.cmd.params" value="-PmaxParallelForks=%maxParallelForks% -s --no-daemon --continue -I ./gradle/buildScanInit.gradle -Djava7.home=%linux.jdk.for.gradle.compile%" />
          <param name="ui.gradleRunner.gradle.home" value="%teamcity.build.checkoutDir%/dogfood-second" />
          <param name="ui.gradleRunner.gradle.tasks.names" value="clean quickCheck" />
          <param name="ui.gradleRunner.gradle.wrapper.useWrapper" value="false" />
        </parameters>
      </runner>
      <runner id="RUNNER_4" name="CHECK_CLEAN_M2" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[REPO=/home/%env.USER%/.m2/repository
if [ -e $REPO ] ; then
tree $REPO
rm -rf $REPO
echo "$REPO was polluted during the build"
return 1
else
echo "$REPO does not exist"
fi]]></param>
          <param name="teamcity.step.mode" value="execute_always" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
      <runner id="RUNNER_5" name="TAG_BUILD" type="gradle-runner">
        <parameters>
          <param name="teamcity.coverage.emma.include.source" value="true" />
          <param name="teamcity.coverage.emma.instr.parameters" value="-ix -*Test*" />
          <param name="teamcity.coverage.idea.includePatterns" value="*" />
          <param name="teamcity.coverage.jacoco.patterns" value="+:*" />
          <param name="teamcity.step.mode" value="execute_always" />
          <param name="ui.gradleRUnner.gradle.build.file" value="gradle/buildTagging.gradle" />
          <param name="ui.gradleRunner.additional.gradle.cmd.params" value="-PteamCityUsername=%teamcity.username.restbot% -PteamCityPassword=%teamcity.password.restbot% -PteamCityBuildId=%teamcity.build.id% -PgithubToken=%github.ci.oauth.token% -Djava7.home=%linux.jdk.for.gradle.compile%" />
          <param name="ui.gradleRunner.gradle.tasks.names" value="tagBuild" />
          <param name="ui.gradleRunner.gradle.wrapper.useWrapper" value="true" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings>
      <vcs-entry-ref root-id="Gradle_Branches_GradlePersonalBranches" />
    </vcs-settings>
    <requirements>
      <contains id="RQ_1" name="teamcity.agent.jvm.os.name" value="Linux" />
    </requirements>
    <build-triggers />
    <artifact-dependencies>
      <dependency id="ARTIFACT_DEPENDENCY_1" sourceBuildTypeId="Gradle_Check_Stage1_BuildDistributions" cleanDestination="true">
        <revisionRule name="sameChainOrLastFinished" revision="latest.sameChainOrLastFinished" />
        <artifact sourcePath="distributions/*-all.zip =&gt; incoming-distributions&#xA;build-receipt.properties =&gt; incoming-distributions" />
      </dependency>
    </artifact-dependencies>
    <dependencies>
      <depend-on sourceBuildTypeId="Gradle_Check_Stage3_Passes">
        <options>
          <option name="run-build-if-dependency-failed" value="CANCEL" />
          <option name="run-build-if-dependency-failed-to-start" value="CANCEL" />
          <option name="take-started-build-with-same-revisions" value="true" />
          <option name="take-successful-builds-only" value="true" />
        </options>
      </depend-on>
    </dependencies>
    <cleanup />
  </settings>
</build-type>

